<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MatchedBettingCalculator" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/green_primary</item>
        <!-- Secondary brand color. -->
       <!-- <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MatchedBettingCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/heading</item>
        <item name="android:titleTextColor">@color/black</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/heading</item>
    </style>

    <style name="MyActionBarText" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_normal">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_heading">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/black</item> </style>


    <style name="Theme.MatchedBettingCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MatchedBettingCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>