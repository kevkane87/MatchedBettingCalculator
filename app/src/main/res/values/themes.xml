<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MatchedBettingCalculator" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/green_primary</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/black</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MatchedBettingCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/heading</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="background">@drawable/heading</item>
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MyActionBarText" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>


    <style name="PrefsTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/green_primary</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:horizontalDivider">@color/green_primary</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="listViewPrefs" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/black_tint</item>
        <item name="android:color">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/black</item>
    </style>


    <style name="NavTheme" parent="@style/Widget.Design.NavigationView">
        <item name="android:background">@color/black_tint</item>
        <item name="android:color">@color/green_primary</item>
        <item name="android:itemTextAppearance">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/green_primary</item>
        <item name="buttonBarButtonStyle">@style/DatePickerTheme.ButtonBarStyle</item>
        <item name="backgroundColor">@color/black_tint</item>
    </style>

    <style name="DatePickerTheme.ButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="Theme.MatchedBettingCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MatchedBettingCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>