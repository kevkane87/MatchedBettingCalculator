<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/normalCalculatorFragment">

    <fragment
        android:id="@+id/normalCalculatorFragment"
        android:name="com.example.android.kevkane87.matchedbettingcalculator.normalcalculator.NormalCalculatorFragment"
        tools:layout="@layout/fragment_normal_calculator" >
        <action
            android:id="@+id/action_normalCalculatorFragment_to_savedBetsFragment"
            app:destination="@id/savedBetsFragment" />
        <action
            android:id="@+id/action_normalCalculatorFragment_to_eachWayCalculatorFragment"
            app:destination="@id/eachWayCalculatorFragment" />
        <action
            android:id="@+id/action_normalCalculatorFragment_to_remindersFragment"
            app:destination="@id/remindersFragment" />
    </fragment>
    <fragment
        android:id="@+id/savedBetsFragment"
        android:name="com.example.android.kevkane87.matchedbetapp.savedbets.SavedBetsFragment"
        android:label="SavedBetsFragment" >
        <action
            android:id="@+id/action_savedBetsFragment_to_normalCalculatorFragment"
            app:destination="@id/normalCalculatorFragment" />
        <action
            android:id="@+id/action_savedBetsFragment_to_remindersFragment"
            app:destination="@id/remindersFragment" />
    </fragment>
    <fragment
        android:id="@+id/eachWayCalculatorFragment"
        android:name="com.example.android.kevkane87.matchedbettingcalculator.eachwaycalculator.EachWayCalculatorFragment"
        android:label="EachWayCalculatorFragment" >
        <action
            android:id="@+id/action_eachWayCalculatorFragment_to_savedBetsFragment"
            app:destination="@id/savedBetsFragment" />
        <action
            android:id="@+id/action_eachWayCalculatorFragment_to_normalCalculatorFragment"
            app:destination="@id/normalCalculatorFragment" />
        <action
            android:id="@+id/action_eachWayCalculatorFragment_to_remindersFragment"
            app:destination="@id/remindersFragment" />
    </fragment>
    <fragment
        android:id="@+id/remindersFragment"
        android:name="com.example.android.kevkane87.matchedbettingcalculator.reminders.RemindersFragment"
        android:label="RemindersFragment" >
        <action
            android:id="@+id/action_remindersFragment_to_savedBetsFragment"
            app:destination="@id/savedBetsFragment" />
        <action
            android:id="@+id/action_remindersFragment_to_eachWayCalculatorFragment"
            app:destination="@id/eachWayCalculatorFragment" />
        <action
            android:id="@+id/action_remindersFragment_to_normalCalculatorFragment"
            app:destination="@id/normalCalculatorFragment" />
    </fragment>
</navigation>