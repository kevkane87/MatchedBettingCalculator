<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    app:theme="@style/PrefsTheme">

    <ListPreference
        app:key="key_default_lay_commission"
        app:summary="%s"
        app:defaultValue="0"
        app:entries="@array/pref_lay_commission_labels"
        app:entryValues="@array/pref_lay_commission_values"
        app:iconSpaceReserved="false"
        app:title="Default Lay Commission"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"/>

    <ListPreference
        app:key="key_default_place_payout"
        app:summary="%s"
        app:defaultValue="5"
        app:entries="@array/pref_place_payout_labels"
        app:entryValues="@array/pref_place_payout_values"
        app:iconSpaceReserved="false"
        app:title="Default Place Payout"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"/>

