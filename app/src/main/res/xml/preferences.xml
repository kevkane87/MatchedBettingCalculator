        app:entries="@array/pref_currency"
        app:entryValues="@array/pref_currency"
        app:iconSpaceReserved="false"
        app:title="Currency Symbol"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"/>



</PreferenceScreen>